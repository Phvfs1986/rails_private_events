<div class="container-fluid p-5 bg-light">
  <h2>Edit Event</h2>

  <%= form_for @event do |f| %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_area :description, autofocus: true, autocomplete: "description" %>
    </div>

    <div class="field">
      <%= f.label :location %><br />
      <%= f.text_field :location, autofocus: true, autocomplete: "location" %>
    </div>

    <div class="field">
      <%= f.label :date %><br />
      <%= f.date_field :date, autofocus: true, autocomplete: "date" %>
    </div>

    <div class="field">
      <%= f.label :time %><br />
      <%= f.time_field :time, autofocus: true, autocomplete: "time" %>
    </div><br>

    <div class="actions">
      <%= f.submit "Edit event" %>
    </div>
  <% end %>
</div>
